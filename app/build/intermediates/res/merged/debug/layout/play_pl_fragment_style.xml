<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/play_pl_fragment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/play_pl_fragment_ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="Name" />

    <RatingBar
        android:id="@+id/play_pl_fragment_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/play_pl_fragment_username"
        android:layout_toRightOf="@+id/play_pl_fragment_username" />

    <TextView
        android:id="@+id/play_pl_fragment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play_pl_fragment_message"
        android:layout_alignStart="@+id/play_pl_fragment_message"
        android:layout_below="@+id/play_pl_fragment_ratingBar"
        android:text="Time" />

    <TextView
        android:id="@+id/play_pl_fragment_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/play_pl_fragment_username"
        android:layout_alignStart="@+id/play_pl_fragment_username"
        android:layout_below="@+id/play_pl_fragment_username"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:maxLines="5"
        android:text="Replay"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>